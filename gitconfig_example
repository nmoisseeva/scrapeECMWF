.gitconfig example

[user]
    name = Roland Schigas
    email = rschigas@eos.ubc.ca
[core]
    editor = vim
    excludesfile = /Users/sysop/.gitignore
[color]
    ui = auto
[alias]
    br = branch
    co = checkout
    ci = commit
    st = status
    unstage = reset --
    last = log -1 HEAD
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    dump = cat-file -p
    type = cat-file -t
[push]
    default = simple